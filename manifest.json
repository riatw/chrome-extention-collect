{
	"manifest_version": 2,
	"name": "Collect",
	"description": "WebページをCollectにクリップする拡張機能です。(It is an extension to clip the Web page to Collect.)",
	"version": "1.0.0",
	"icons": {
		"128": "images/icon/icon_128.png"
	},
	"browser_action": {
		"default_icon": {
			"128": "images/icon/icon_128.png"
		},
		"default_title": "Collect",
		"default_popup": "popup.html"
	},
	"permissions": [
		"tabs",
		"<all_urls>"
	],
    "options_page": "options.html",
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}